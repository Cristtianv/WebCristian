---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import Cris from "../../public/foto.png";
import SocialPill from "../components/SocialPill.astro";
import LinkedinIcon from "../icons/LinkedIn.astro";
import GithubIcon from "../icons/Github.astro";
import MailIcon from "../icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
---

<Layout
	tittle="Porfolio de Cristian Velasquez - Desarrollador y Programador web"
>
	<main>
		<SectionContainer class="py-44 pb-24">
			<img class="rounded-full size-14 mb-4" src={Cris.src} alt="yo" />
			<h1 class="text-5xl font-bold flex flex-row gap-x-4 pb-10">
				Hey, soy Cristian
				<a
					href="https://www.linkedin.com/in/cristian-velasquez-foronda/"
					class="flex justify-center items-center"
					><Badge>Disponible</Badge>
				</a>
			</h1>
			<h2 class="text-2xl pb-4 opacity-75 text-wrap">
				Soy un junior con aires de senior, contratame hijo de tu
				putisima madre. me especializo en crear apps que funcionen
			</h2>
			<nav class="flex gap-x-4 mt-8">
				<SocialPill
					href="https://www.linkedin.com/in/cristian-velasquez-foronda/"
				>
					<LinkedinIcon class="size-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/Cristtianv">
					<GithubIcon class="size-6" />
					GitHub
				</SocialPill>
				<SocialPill href="/">
					<MailIcon class="size-6" />
					cristtianv2@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>
		<SectionContainer id="proyectos">
			<h2 class="text-2xl font-semibold mb-6">Experiencia laboral</h2>
			<Experience />
		</SectionContainer>
	</main>
</Layout>
